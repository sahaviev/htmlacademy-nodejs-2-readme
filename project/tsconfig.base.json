{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/config/users": ["libs/config/users/src/index.ts"],
      "@project/models": ["libs/shared/models/src/index.ts"],
      "@project/module/blog": ["libs/module/blog/src/index.ts"],
      "@project/module/comments": ["libs/module/comments/src/index.ts"],
      "@project/module/likes": ["libs/module/likes/src/index.ts"],
      "@project/module/posts": ["libs/module/posts/src/index.ts"],
      "@project/module/tags": ["libs/module/tags/src/index.ts"],
      "@project/module/users": ["libs/module/users/src/index.ts"],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/shared/types": ["libs/shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
